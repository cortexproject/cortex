#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

QUAY_PREFIX=quay.io/
IMAGES=$(make images)
IMAGE_TAG=$(./tools/image-tag)

for image in ${IMAGES}; do
  if [[ "$image" == *"build"* ]]; then
    continue
  fi
  docker push ${image}:${IMAGE_TAG}
  docker tag ${image}:${IMAGE_TAG} ${QUAY_PREFIX}${image}:${IMAGE_TAG}
  docker push ${QUAY_PREFIX}${image}:${IMAGE_TAG}
done
